<!doctype html>
<html>
<head>
  <title>Flapper News</title>
  <!-- Stylesheets -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <style>
    .glyphicon-thumbs-up { 
      cursor: pointer; 
    }
    .link {
      font-size: 20px;
      margin-left: 10px;
    }
    .add-new {
      margin-top: 30px; 
    }
  </style>
  <!-- Js -->
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>

<body ng-app="flapperNews">
  <main class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view> 
    </div>
  </main>

  <script type="text/ng-template" id="/home.html">
    <header class="page-header">
      <h1 class="text-center">Flapper News</h1>
    </header>
    
    <div ng-repeat="post in posts | orderBy: '-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up" 
            ng-click="incrementUpvotes(post)">
      </span>
      {{ post.upvotes }}
      <span class="link">
        <a ng-show="post.link" 
           href="{{ post.link }}">
          {{ post.title }}
        </a>
        <span ng-hide="post.link">
          {{ post.title }}
        </span>
        <span>
          <a href="#/posts/{{ $index }}">- comments</a>
        </span>
      </span>
    </div>

    <form ng-submit="addPost()" 
          class="add-new">
      <h3>Add a new Post</h3>
      <div class="form-group">
        <input class="form-control" 
               type="text" 
               placeholder="Title" 
               ng-model="title"></input>
      </div>
      <div class="form-group">
        <input class="form-control" 
               type="url" 
               placeholder="Link" 
               ng-model="link"></input>
      </div>
      <button type="submit"
              class="btn btn-primary btn-block">Post</button>
    </form>
  </script>

  <script type="text/ng-template" id="/posts.html">
    <div class="page-header">
      <h3>
        <a ng-show="post.link" href="{{ post.link }}">
          {{ post.title }}
        </a>
        <span ng-hide="post.link">
          {{ post.title }}
        </span>
      </h3>
    </div>

    <div ng-repeat="comment in post.comments | orderBy: '-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up"
            ng-click="incrementUpvotes(comment)">
      </span>
      {{ comment.upvotes }} - by {{ comment.author }}
      <span class="link">{{ comment.body }}</span>
    </div>

    <form ng-submit="addComment()"
          class="add-new">
      <h3>Add a new comment</h3>

      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Comment"
               ng-model="body">
        </input>
      </div>
      <button type="submit"
              class="btn btn-primary btn-block">Comment
      </button>
    </form>
  </script>
</body>
</html>